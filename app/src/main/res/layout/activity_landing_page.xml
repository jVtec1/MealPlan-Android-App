<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandingPage">


    <TextView
        android:id="@+id/welcomeUserTextViewLabel"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="@string/welcome_user"
        android:textAlignment="center"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    <View-->
    <!--        android:id="@+id/view"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="2dp"-->
    <!--        android:background="@color/black"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        tools:ignore="MissingConstraints"-->
    <!--        tools:layout_editor_absoluteY="66dp" />-->

    <TextView
        android:id="@+id/findMealLabelTextView"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:text="@string/find_a_meal"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/welcomeUserTextViewLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/AddMealInputEditText"  />

    <TextView
        android:id="@+id/addMealLabelTextView"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/add_a_meal"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/findMealLabelTextView"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/findMealInputEditText"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="@string/search_for_a_meal"
        app:layout_constraintTop_toBottomOf="@id/welcomeUserTextViewLabel"
        app:layout_constraintStart_toEndOf="@id/findMealLabelTextView"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/AddMealInputEditText"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="@string/add_a_new_meal"
        app:layout_constraintTop_toBottomOf="@id/findMealInputEditText"
        app:layout_constraintStart_toEndOf="@id/addMealLabelTextView"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/logButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="@string/log"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/AddMealInputEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/adminButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/admin_area"
        android:visibility="invisible"
        tools:visibility="visible"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>